<section>
  <div>
  	{{ section.settings.heading }}
  </div>	
  <div class="contain">
    <div id="owl-carousel" class="slider owl-carousel owl-theme">
      {% for block in section.blocks %}
      <div class="item">
        <div>
        	<img src="{{ block.settings.slider_image | image_url :"medium" }}" >
        </div>
      </div>
	  {% endfor %}
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Testimonial Name",
    "settings": [
    {
      "type": "text", 
      "label":"heading", 
      "id":"heading"
    }
   ], 
   "blocks":[
		{
			"type":"testimonail",
			"name":"testimonail",
			"settings": [
			{
			  "type":"text",
			   "label":"Slider Text",
			   "id":"slider_text"
			},
		    {
			  "type":"image_picker",
			   "label":"Slider Image",
			   "id":"slider_image"
			}
			]
		}
	
	]
  }
{% endschema %}

